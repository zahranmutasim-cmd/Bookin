<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan tanggal - Gradient style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient_blue"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/calendar_icon"
                app:tint="@color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_ad_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dari : 7 Nov 2025"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Content: Book info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="@color/white">

            <!-- Book Image with rounded corners -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="85dp"
                android:layout_height="110dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/iv_book_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#F0F0F0"
                    tools:src="@tools:sample/backgrounds/scenic" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Book Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buku Pelajaran SMA Sejarah Indonesia"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp" />

                <!-- Location with icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/location_icon"
                        app:tint="#888888"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_book_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palembang Kota, Sumatera Selatan"
                        android:textColor="#666666"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Price -->
                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gratis"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Favorite count with heart -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/badge_favorite_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/favorite_icon"
                        app:tint="#E91E63" />

                    <TextView
                        android:id="@+id/tv_favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Disukai"
                        android:textColor="#E91E63"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="14dp"
            android:background="#EEEEEE" />

        <!-- Status Iklan Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="STATUS IKLAN"
            android:textColor="#444444"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="14dp">

            <!-- Tombol Terjual/Belum Terjual -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sold_status"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="BELUM TERJUAL"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/red_not_sold"
                app:cornerRadius="12dp"
                app:elevation="2dp" />

            <!-- Row tombol Hapus dan Lihat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <!-- Tombol Hapus Iklan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_ad"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="HAPUS IKLAN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1.5dp" />

                <!-- Tombol Lihat Iklan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_ad"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="LIHAT IKLAN"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="10dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
